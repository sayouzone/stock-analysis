# Stage 1: Frontend ë¹Œë“œ
FROM node:20-slim AS frontend-builder

WORKDIR /app/frontend

# Copy package.json first for better caching
COPY frontend/package.json ./
RUN npm install

# Copy the rest of the frontend code
COPY frontend/ .

# Manually run svelte-kit sync to generate necessary files
RUN npx svelte-kit sync

# ğŸ’¡ 1. --build-arg "VITE_API_URL=..." ë¡œ ì „ë‹¬ëœ ê°’ì„ ë°›ê¸° ìœ„í•´ ARG ì„ ì–¸
ARG VITE_API_URL

# ğŸ’¡ 2. ë°›ì€ ARG ê°’ì„ ENVë¡œ ì„¤ì •í•˜ì—¬ 'npm run build' í”„ë¡œì„¸ìŠ¤ê°€ ì‚¬ìš©í•˜ë„ë¡ í•¨
ENV VITE_API_URL=${VITE_API_URL}

# Build with production environment
RUN npm run build

# Stage 2: Python ë°±ì—”ë“œ + í”„ë¡ íŠ¸ì—”ë“œ í†µí•©
FROM python:3.11-slim AS backend

# Install system dependencies
RUN apt-get update && apt-get install -y gcc && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy Python requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# fastmcpê°€ ì‚¬ìš©í•˜ëŠ” uv ì„¤ì¹˜
RUN pip install uv

# Copy backend source code
COPY main.py .
COPY mcp_server/ ./mcp_server/
COPY routers/ ./routers/
COPY utils/ ./utils/
COPY stock_agent/ ./stock_agent/

# Copy frontend build from previous stage
COPY --from=frontend-builder /app/frontend/build ./frontend/build/

# Set runtime environment variables
ENV HOST=0.0.0.0
ENV PORT=8080
# ENVIRONMENT, GCP_PROJECT_ID ë“±ì€ Cloud Run ì„œë¹„ìŠ¤ì—ì„œ ì§ì ‘ ì„¤ì •í•©ë‹ˆë‹¤.

# Run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]